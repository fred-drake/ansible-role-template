{
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "yaml.validate": true,
  "yaml.schemaStore.enable": true,
  "terminal.integrated.fontFamily": "Hack Nerd Font",
  "sops.enabled": true,
  "sops.binPath": "/usr/local/bin/sops",
  "yaml.schemas": {
    "https://raw.githubusercontent.com/ansible-community/schemas/main/f/ansible-inventory.json": "file:///workspaces/infrastructure/ansible/inventories/group_vars/all/docker.yml"
  },
  "files.associations": {
    "*.sops.yml": "yaml",
    "**/defaults/**/*.{yml,yaml}": "ansible",
    "**/handlers/**/*.{yml,yaml}": "ansible",
    "**/meta/**/*.{yml,yaml}": "ansible",
    "**/tasks/**/*.{yml,yaml}": "ansible",
    "**/vars/**/*.{yml,yaml}": "ansible",
    ".yamllint": "yaml"
  },
  "ansible.python.interpreterPath": ".direnv/python-3.10.0/bin/python",
  "ansible.ansible.path": ".direnv/python-3.10/bin/ansible",
  "ansible.validation.lint.path": ".direnv/python-3.10/bin/ansible-lint"
}
